\begin_layout Standard
Several invariant quantities are used:
\end_layout

\begin_layout Itemize
Lepton's energy loss in the nucleon rest frame: 
\begin_inset Formula 
\begin{align}
\nu & =\frac{q*P}{M}=E-E',\label{eq:nu}
\end{align}

\end_inset

 where 
\begin_inset Formula $E$
\end_inset

 and 
\begin_inset Formula $E'$
\end_inset

 are the initial and final lepton energies.
\end_layout

\begin_layout Itemize
Squared four-momentum transfer: 
\begin_inset Formula 
\begin{equation}
Q^{2}=-q^{2}\approx4EE'sin^{2}(\frac{\theta}{2}),\label{eq:q2}
\end{equation}

\end_inset

where 
\begin_inset Formula $\theta$
\end_inset

 is the leptons scattering angle.
\end_layout

\begin_layout Itemize
Square of invariant mass: 
\begin_inset Formula 
\begin{equation}
W^{2}=(P+q)^{2}=M^{2}+2M\nu-Q^{2},\label{eq:W}
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
Bjorken scaling variable: 
\begin_inset Formula 
\begin{equation}
x=\frac{Q^{2}}{2M\nu}.\label{eq:x}
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
The fraction of lepton energy loss: 
\begin_inset Formula 
\begin{equation}
y=\frac{\nu}{E}.\label{eq:y}
\end{equation}

\end_inset


\end_layout

